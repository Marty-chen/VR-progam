/* pages/order/order_details/index.wxss */

.status_banner {
  width: 100%;
  height: 240rpx;
  background:linear-gradient(-10deg,rgba(255,95,17,1) 0%,rgba(255,174,0,1) 100%);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 80rpx;
}

.status_text {
  color: #fff;
}
.status_text_top {
  font-size: 36rpx;
}
.status_time {
  font-size: 28rpx;
}
.status_img {
  width: 145rpx;
}

.address {
  padding: 30rpx 32rpx 0rpx 32rpx;
}

.next_icon {
  width: 12rpx;
  vertical-align: middle;
}
.has_addr {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.name_phone text {
  margin-right: 50rpx;
}
.addr_detail {
  font-size: 28rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 10rpx;
  max-width: 650rpx;
}
.line_img {
  width: 100%;
}

.order_item {
  padding: 0 32rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.order_num {
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}
.order_status {
  color: #666;
}
.produ {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.produ_img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 4rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.produ_info {
  vertical-align: top;
  
}
.name {
  width: 320rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.pro_color {
  font-size: 24rpx;
  color: #999;
  padding-top: 40rpx;
}

.pro_right {
  font-size: 28rpx;
  text-align: right;
  
}
.pro_price {
  font-size: 28rpx;
}
.pro_price text {
  font-size: 36rpx;
}
.pro_num {
  font-size: 24rpx;
  color: #999;
  margin-top: 30rpx;
}

.btns {
  margin:20rpx 0 30rpx 0;
  text-align: right;
}
.btns button {
  display: inline-block; 
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border: 1rpx solid #999;
  color: #999;
}
 button::after {
  border: none;
}
.total_price {
  padding-top: 32rpx;
  
}
.cells {
  font-size: 28rpx;
  padding: 0 32rpx 32rpx 32rpx;
  display: flex;
  justify-content: space-between;
}
.cells_title {
  color: #666;
  min-width: 150rpx;
}


.cells_nobtw {
  padding: 32rpx;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
}
.cells_nobtw:nth-last-child(1) {
  border-bottom: none;
}
.cells_nobtw_title text {
  color: #666;
  margin-right: 30rpx;
}

.copy_img {
  width: 32rpx;
  position: absolute;
  top: 20rpx;
  right: 60rpx;
}

.telPhone {
  padding-bottom: 160rpx;
  background-color: #f8f8f8;
  position: relative;
}
.tel_btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  font-size: 28rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.tel_icon {
  position: absolute;
  top: 35rpx;
  left: 35%;
  color: var(--themeColor);
}
.bottom_btns {
  position: fixed;
  bottom: 0;
  width: 100%;
  box-shadow:0px 4px 12px 0px rgba(153,153,153,0.2);
  text-align: right;
  background-color: #fff;
  padding: 20rpx 32rpx;
}

.bottom_btns button {
  display: inline-block; 
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border: 1rpx solid #999;
  color: #999;
}
.bottom_btns .red_btn {
  color: var(--themeColor);
  border: 1rpx solid var(--themeColor);
}

.popup-title {
  text-align: center;
  margin: 40rpx 0 50rpx 0;
}

.popup-btns {
  margin: 100rpx 0 60rpx 0;
}

.van_tag {
  margin-right: 20rpx;
 
}





