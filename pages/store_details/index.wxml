<view class="wraper">
  <view class="banner">
    <image src="/assets/images/swiper/2.png" mode="widthFix" />
  </view>
  <!-- 店铺资料 -->
  <view class="store_info bdb">
    <view class="store_name">Quickest快点漆修汽车行</view>
    <view class="phone">
      <view class="phone_number ilb">电话: 13820001000</view>
      <view class="phone_icon ilb">
        <image src="/assets/images/tel_icon.png" mode="widthFix" />
      </view>
    </view>
    <view class="distance">距离: 270米</view>
    <view class="address">地址: 东莞市长安镇S358省道宵边路段齐庆大夏首层89号</view>
