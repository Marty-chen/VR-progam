.order_item {
  padding: 30rpx 32rpx;
}
.order_num {
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}
.order_status {
  color: #666;
}
.produ {
  display: flex;
  justify-content: space-between;
  
}

.produ_img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 4rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.produ_info {
  vertical-align: top;
  
}
.name {
  width: 320rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.pro_color {
  font-size: 24rpx;
  color: #999;
  padding-top: 40rpx;
}

.pro_right {
  font-size: 28rpx;
  text-align: right;
  
}
.pro_price {
  font-size: 28rpx;
}
.pro_price text {
  font-size: 36rpx;
}
.pro_num {
  font-size: 24rpx;
  color: #999;
  margin-top: 30rpx;
}
.cells {
  display: flex;
  justify-content: space-between;
  padding: 35rpx 32rpx;
}
.cells_title {
  min-width: 140rpx;
  margin-right: 40rpx;
}
.cells_content {
 vertical-align: middle;
}
.cells_content .price {
  color: var(--priceColor);
  font-weight: bold;
}
.cells_next_arrow {
  width: 10rpx;
}

.bdline {
  border-bottom: 1rpx solid #e5e5e5;
}

.upload_img {
  width: 200rpx;
  height: 200rpx;
  margin-left: 32rpx;
}

.sub_btn {
  padding: 100rpx 0;
}

.popup-title {
  text-align: center;
  margin: 40rpx 0 50rpx 0;
}

.popup-btns {
  margin: 100rpx 0 60rpx 0;
}





