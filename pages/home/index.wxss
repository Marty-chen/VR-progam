/**index.wxss**/
swiper {
  width: 100%;
  height: calc(100vw*360/750);
}

.video {
  padding: 30rpx;
}

.top {
  display: flex;
  justify-content: space-between;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
}
.more {
  color: #999;
  font-size: 28rpx;
}
.arrows {
  width: 12rpx;
  height: 24rpx;
  display: inline-block;
  margin-left: 10rpx;
}
video {
  width: 99%;
  height: 388rpx;
  
}
.video_box {
  padding: 30rpx 0;
  
}
.nearby .top {
  padding: 30rpx;
}
.nearby_shops {
  padding-bottom: 60rpx;
  white-space: nowrap;
}
.scroll-view-item {
  padding-left: 30rpx;
  display: inline-block;
}
.shop_logo {
  display: inline-block;
  width: 140rpx;
  height: 140rpx;
  border-radius: 4rpx;
  overflow: hidden;
  vertical-align: middle;
  
}
.shop_info {
  display: inline-block;
  vertical-align: middle;
  width: 350rpx;
  margin: 0 30rpx;
}
.shop_name {
  margin-bottom: 15rpx;
}
.shop_address {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.center_line {
  display: inline-block;
  height: 100rpx;
  width: 1rpx;
  border-right: 1rpx solid #e5e5e5;
  vertical-align: middle;
}

.category {
  padding: 30rpx 32rpx 0 32rpx;
}
.flex_box {
  display: flex;
  padding-top: 30rpx;
  flex-wrap: wrap;
}

.flex_item {
  text-align: center;
  margin-bottom: 30rpx ;
  max-width: 33.33%;
  
}
.category_name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.category_icon {
  width: 60rpx;
  display: inline-block;
}

.flex_item:nth-of-type(1){
  padding-right:100rpx;
}

.flex_item:nth-of-type(2){
  padding-left:50rpx;
  padding-right:50rpx;
}      

.flex_item:nth-of-type(3){
  padding-left:100rpx;
} 
.flex_item:nth-of-type(4){
  padding-right:100rpx;
}

.flex_item:nth-of-type(5){
  padding-left:50rpx;
  padding-right:50rpx;
}      

.flex_item:nth-of-type(6){
  padding-left:100rpx;
}
.flex_item:nth-of-type(7){
  padding-right:100rpx;
}

.flex_item:nth-of-type(8){
  padding-left:50rpx;
  padding-right:50rpx;
}      

.flex_item:nth-of-type(9){
  padding-left:100rpx;
}  
   
.news_item {
  display: flex;
  justify-content: space-between;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
}

.news_item_left {
  width: 416rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.news_title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.news_item_right {
  width: 220rpx;
  height: 156rpx;
  border-radius: 4rpx;
  overflow: hidden;
}

.news_time {
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  color: #999;
}
.eye_icon {
  font-size: 32rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}