/* pages/order/index.wxss */
.tabs {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 120rpx;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  background-color: #fff;
  z-index: 999;
  color: #666;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}
.tab_item {
  padding-bottom: 4rpx;
}
.tab_item.active {
  border-bottom: 4rpx solid var(--themeColor);
  color: var(--themeColor);
}
.orders {
  padding-top: 120rpx;
}
.order_item {
  padding: 0 32rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.order_item:nth-last-child(1) {
  border: none;
}

.pro_price {
  font-size: 28rpx;
}
.pro_price text {
  font-size: 36rpx;
}
.order_num {
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}
.order_status {
  color: #666;
}
.produ {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.produ_img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 4rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.produ_info {
  vertical-align: top;
  
}
.name {
  width: 320rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.pro_color {
  font-size: 24rpx;
  color: #999;
  padding-top: 40rpx;
}

.pro_right {
  font-size: 28rpx;
  text-align: right;
  
}
.pro_num {
  font-size: 24rpx;
  color: #999;
  margin-top: 30rpx;
}

.total_price {
  text-align: right;
  font-size: 24rpx;
  padding: 20rpx 0;
}
.total_price text {
  font-size: 28rpx;
}
.btns {
  margin: 30rpx 0;
  text-align: right;
}
.btns button {
  display: inline-block; 
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border: 1rpx solid #999;
  color: #999;
}
.btns button::after {
  border: none;
}
.btns .red_color {
  color: var(--themeColor);
  border: 1rpx solid var(--themeColor);
}

.van_tag {
  margin-right: 20rpx;
}

.popup-title {
  text-align: center;
  margin: 40rpx 0 50rpx 0;
}

.popup-btns {
  margin: 100rpx 0 60rpx 0;
}

.no_more {
  font-size: 24rpx;
  color: #999;
  background-color: #f7f7f7;
  text-align: center;
  padding: 10rpx 0;
}