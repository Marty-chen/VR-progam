/* pages/cart/index.wxss */
.nothing {
  text-align: center;
}
.nothing_icon {
  width: 360rpx;
  display: inline-block;
  margin: 100rpx auto 40rpx auto;
}
.nothing_worlds {
  font-size: 30rpx;
}

.something {
  position: relative;
  padding-bottom: 100rpx;
}

.something .manage {
  width: 100%;
  height: 93rpx;
  background-color: #f7f7f7;
  line-height: 93rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
}
.something .manage .check_all .check_all_icon {
  width: 32rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
}

.cards_item {
  padding: 30rpx 32rpx;
  white-space: nowrap;
}
.cards_check_icon {
  width: 32rpx;
  display: inline-block;
  /* vertical-align: middle; */
  margin-right: 20rpx;
}
.produ_img {
  background-repeat:no-repeat; 
  background-size:100% 100%;
  -moz-background-size:100% 100%;
  width: 180rpx;
  height: 180rpx;
  border-radius: 4rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 15rpx;
}
.produ_info {
  
  height: 180rpx;
  display: inline-flex;
  flex-direction: column;
  justify-content: space-between;
  vertical-align: top;
}
.produ_name {
  width: 440rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}
.price {
  color: var(--priceColor);
  font-weight: bold;
}
.produ_color {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  color: #999;
  background-color: #f2f2f2;
  width: 200rpx;
  border-radius: 4rpx;
}
.info_bottom {
  display: flex;
  justify-content: space-between;
}

.bottom_btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;

  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  box-shadow:0px 4px 12px 0px rgba(153,153,153,0.1);
  z-index: 9999999;
}
.check_out {
  float: right;
}
.pay_btn {
  width: 200rpx;
  height: 100rpx;
  background-color: var(--themeColor);
  text-align: center;
  color: #fff;
  margin-left: 30rpx;
}
.total_money {
  color: var(--priceColor);
  font-weight: bold;
}
.total_num {
  margin-right: 50rpx;
}

.del_btn {
  width: 200rpx;
  height: 100rpx;
  background-color: #FF7E00;
  text-align: center;
  color: #fff;
}